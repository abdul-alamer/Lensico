<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.gerogerke.android.lensico">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustPan">
        <activity
            android:name=".LensicoActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityImageView"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".LensicoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LensicoActivity" />
        </activity>
        <activity
            android:name=".activities.ActivityPhotoSubmit"
            android:theme="@style/AppTheme.Transparent"
            android:parentActivityName=".LensicoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LensicoActivity" />
        </activity>
        <activity
            android:name=".activities.ActivityAbout"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".LensicoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LensicoActivity" />
        </activity>
        <activity
            android:name=".activities.ActivityStreamView"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".LensicoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LensicoActivity" />
        </activity>
    </application>

</manifest>
